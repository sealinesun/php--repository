{
    "name": "guillermoandrae/php-repository-library",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1"
    },
    "autoload": {
        "files": ["src/helpers.php"],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^3.2",
        "icanboogie/inflector": "^1.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "check-style": [
            "phpcbf --standard=PSR2 --extensions=php src",
            "phpcs --standard=PSR2 --extensions=php src"
        ],
        "check-coverage": [
            "phpunit --coverage-text --coverage-clover=./clover.xml"
        ],
        "test": [
            "@check-style",
            "@check-coverage"
        ]
    }
}
